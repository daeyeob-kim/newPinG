<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/AppThemeDark.ActionBarStyle</item>
    </style>

    <style name="AppThemeDark.ActionBarStyle" parent="android:Widget.ActionBar">
        <item name="android:background">@color/DarkActionBarColor</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="android:background">#ff33b5e5</item>

    </style>
</resources>
